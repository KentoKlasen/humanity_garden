-- [ player / controls ] --

function init_plr()
	plr=
	{dir=4,
	x=8,y=8,
	spd=1,
	anim="idle",
	t=0}
	
	-- ⬅️➡️⬆️⬇️
	anim_repo=	
	{ idle={1,1,3,2}
	, run ={6,6,8,4}
	, work={52,52,50,48}
	}
end

function draw_plr()
 map()
	palt(0,false)
	palt(1,true)
	local frame=anim_repo[plr.anim][plr.dir]
	if plr.anim~="idle" then
	 local plr_anim_speed=12
		frame+=(plr.t+plr_anim_speed)/plr_anim_speed%2
	end
	spr(frame
	,plr.x,plr.y,1,1,plr.dir==1)
	palt()
end

function update_plr()
	plr.t+=1
	-- ⬅️➡️⬆️⬇️
	if is_on_cell() then
 	handle_movement_input() 
 else 
	 --go to next cell 
 	--add to plr x or y
 	if plr.dir==1 then
	 	plr.x-=plr.spd 
 	elseif	plr.dir==2 then
 	 plr.x+=plr.spd 
 	elseif plr.dir==3 then
 	 plr.y-=plr.spd
 	elseif plr.dir==4 then
 	 plr.y+=plr.spd
 	end
	end
end

--returns: boolean
function is_on_cell()
 return plr.x%8==0 and plr.y%8==0
end

function handle_movement_input()
	 plr.anim="run"
	if btn(⬆️) and plr.y>=8 then
	 plr.dir=3 
	 plr.y-=plr.spd 
	elseif btn(➡️) and plr.x<=112 then
	 plr.dir=2
	 plr.x+=plr.spd
 elseif btn(⬇️) and plr.y<=112 then
	 plr.dir=4
	 plr.y+=plr.spd
	elseif btn(⬅️) and plr.x>=8 then
	 plr.dir=1
	 plr.x-=plr.spd
	else
		plr.anim="idle"
		plr.t=0
	end
end

